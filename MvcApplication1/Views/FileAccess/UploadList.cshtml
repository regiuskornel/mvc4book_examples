@model IEnumerable<MvcApplication1.Controllers.Files.FileModel>

<h2>Feltöltött fájlok</h2>

<p>
    @Html.ActionLink("Új feltöltés", "UploadNew")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FileName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Length)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MIME)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.Id)
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FileName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Length)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MIME)
        </td>
        <td>
            @Html.ActionLink("Letöltés", "DownloadFile", new { id=item.Id })
            @*Html.ActionLink("Törlés", "DeleteFile", new { id=item.Id }) *@
        </td>
    </tr>
}

</table>
