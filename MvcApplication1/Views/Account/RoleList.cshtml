@model IEnumerable<MvcApplication1.Models.RoleModel>


<h2>RoleList</h2>

<p>
    @Html.ActionLink("Create New", "RoleCreate")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "RoleEdit", new { id=item.Name }) |
            @Html.ActionLink("Details", "RoleDetails", new { id=item.Name }) |
            @Html.ActionLink("Delete", "RoleDelete", new { id=item.Name })
        </td>
    </tr>
}

</table>
